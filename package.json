{
  "name": "monotonimaker",
  "version": "1.0.0",
  "description": "Et tool til hurtigt at lave en monotonilinje",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "NormannDesigns",
  "license": "ISC",
  "devDependencies": {
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.normann.monotonimaker",
    "productName": "Monotonimaker",
    "target": "NSIS",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerLanguages": "da-DK",
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    }
  }
}
